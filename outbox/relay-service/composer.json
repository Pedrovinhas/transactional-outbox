{
    "name": "outbox/relay-service",
    "description": "Outbox Relay Service - Polls outbox and publishes to RabbitMQ",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "php-amqplib/php-amqplib": "^3.5",
        "monolog/monolog": "^3.5",
        "open-telemetry/sdk": "^1.0",
        "open-telemetry/exporter-otlp": "^1.0",
        "open-telemetry/api": "^1.8",
        "guzzlehttp/guzzle": "^7.5",
        "php-http/guzzle7-adapter": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "OutboxRelay\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "tbachert/spi": false
        }
    }
}
